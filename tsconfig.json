{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "pretty": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "types": [
      "google.maps",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "test"
  ]
}